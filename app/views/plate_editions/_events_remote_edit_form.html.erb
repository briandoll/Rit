<% remote_form_for plate_edition, :index => plate_edition.id, :html => { :class => 'item-form'} do |f| %>
  <%= hidden_field_tag 'success_url', event_url(plate_edition.event) %>
  <%= hidden_field_tag 'error_partial', 'plate_editions/events_remote_edit_form' %>
  <%- cancel = link_to_remote("Cancel", :url => plate_edition_path(plate_edition, :partial => 'plate_editions/events_plate_edition'), 
                                        :update => dom_id(plate_edition), 
                                        :method => :get) -%>
  <%= render :partial => 'plate_editions/events_form_fields', :locals => { :f => f, :plate_edition => plate_edition, :button_text => 'Update', :cancel => cancel } %>
<% end %>